{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "author_name": {
      "type": "string"
    },
    "author_designation": {
      "type": "string"
    },
    "expertise": {
      "type": "string",
      "required": true
    },
    "button_text": {
      "type": "string"
    },
    "button_url": {
      "type": "string"
    },
    "linkedin": {
      "type": "string"
    },
    "mail": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "blogs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::blog.blog",
      "mappedBy": "authors"
    },
    "slug": {
      "type": "string"
    }
  }
