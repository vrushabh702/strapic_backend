{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "blogs_categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blogs-category.blogs-category"
    },
    "author_name": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author.author"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "meta_title": {
      "type": "string",
      "required": true
    },
    "meta_description": {
      "type": "string",
      "required": true
    },
    "active_status": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    }
  }
}
